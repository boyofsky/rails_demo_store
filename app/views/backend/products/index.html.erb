<div class="row">
  <div class="col-sm-6 col-md-4">
  <% @products.each do |product| %>

    <div class="thumbnail">
      <%= image_tag(product.image.middle, alt: "No image") %>
      <div class="caption">
        <h3><%= product.name %></h3>
        <p>售價: <%= product.price %></p>
		<p><%= product.description %></p>
        <p>
          <%= edit_button(edit_backend_product_path(product)) %>
          <%= delete_button(backend_product_path(product)) %>
		</p>
      </div>
    </div>
  <% end %>
  </div>
</div>

